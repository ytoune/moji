{
	"name": "@ytoune/moji",
	"type": "module",
	"version": "2.1.1",
	"description": "半角全角変換",
	"author": {
		"name": "ytoune"
	},
	"engines": {
		"node": ">= 16"
	},
	"license": "MIT",
	"source": "src/moji.ts",
	"exports": {
		".": {
			"require": "./dist/moji.cjs",
			"default": "./dist/moji.modern.js"
		},
		"./map": {
			"require": "./dist/map.cjs",
			"default": "./dist/map.modern.js"
		}
	},
	"main": "dist/moji.cjs",
	"module": "dist/moji.module.js",
	"types": "dist/moji.d.ts",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:ytoune/moji.git"
	},
	"homepage": "https://github.com/ytoune/moji",
	"scripts": {
		"build": "rimraf dist && microbundle build && microbundle -i src/map.ts -o dist/map.js",
		"dev": "microbundle watch",
		"test": "eslint '**/*.{ts,tsx}' && tsc --noEmit && jest --passWithNoTests",
		"ts-node": "node -r esbuild-register"
	},
	"dependencies": {},
	"devDependencies": {
		"@eai/moji": "^1.2.0",
		"@herp-inc/eslint-config": "0.18.0",
		"@swc/core": "1.2.196",
		"@swc/jest": "0.2.21",
		"@types/jest": "28.1.0",
		"@types/node": "17.0.39",
		"@typescript-eslint/eslint-plugin": "5.27.0",
		"@typescript-eslint/parser": "5.27.0",
		"esbuild": "0.14.42",
		"esbuild-register": "3.3.2",
		"eslint": "8.17.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-import-resolver-typescript": "2.7.1",
		"eslint-plugin-import": "2.26.0",
		"jest": "28.1.0",
		"microbundle": "0.15.0",
		"prettier": "2.6.2",
		"rimraf": "3.0.2",
		"typescript": "4.7.3"
	},
	"jest": {
		"extensionsToTreatAsEsm": [
			".ts",
			".tsx"
		],
		"transform": {
			"^.+\\.(js|jsx|ts|tsx)$": [
				"@swc/jest",
				{
					"jsc": {
						"parser": {
							"syntax": "typescript"
						}
					}
				}
			]
		},
		"projects": [
			"<rootDir>"
		],
		"moduleNameMapper": {
			"^~/(.*)$": "<rootDir>/src/$1"
		}
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "all",
		"semi": false,
		"arrowParens": "avoid",
		"printWidth": 120,
		"overrides": [
			{
				"files": [
					"*.md",
					"*.yml",
					"*.yaml"
				],
				"options": {
					"useTabs": false
				}
			}
		]
	}
}
