{
  "name": "@ytoune/moji",
  "type": "module",
  "version": "2.2.0",
  "description": "半角全角変換",
  "author": {
    "name": "ytoune"
  },
  "engines": {
    "node": ">= 18"
  },
  "packageManager": "yarn@1.22.21",
  "volta": {
    "node": "18.19.0",
    "yarn": "1.22.21"
  },
  "license": "MIT",
  "source": "src/moji.ts",
  "exports": {
    ".": {
      "require": "./dist/moji.cjs",
      "default": "./dist/moji.modern.js"
    },
    "./map": {
      "require": "./dist/map.cjs",
      "default": "./dist/map.modern.js"
    }
  },
  "main": "dist/moji.cjs",
  "module": "dist/moji.module.js",
  "types": "dist/moji.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ytoune/moji.git"
  },
  "homepage": "https://github.com/ytoune/moji",
  "scripts": {
    "build": "rimraf dist && microbundle build && microbundle -i src/map.ts -o dist/map.js",
    "dev": "microbundle watch",
    "test": "eslint 'src/**/*.{ts,tsx}' && tsc --noEmit && vitest run --passWithNoTests",
    "ts-node": "node -r esbuild-register"
  },
  "dependencies": {},
  "devDependencies": {
    "@eai/moji": "1.2.0",
    "@herp-inc/eslint-config": "0.26.0",
    "@types/jest": "29.5.11",
    "@types/node": "20.10.4",
    "@typescript-eslint/eslint-plugin": "6.14.0",
    "@typescript-eslint/parser": "6.14.0",
    "esbuild": "0.19.9",
    "esbuild-register": "3.5.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "microbundle": "0.15.1",
    "prettier": "3.1.1",
    "rimraf": "5.0.5",
    "typescript": "5.3.3",
    "vite": "5.0.10",
    "vitest": "1.0.4"
  },
  "prettier": {
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "arrowParens": "avoid",
    "printWidth": 120
  }
}
